{
  "name": "choco-ops-cloud-backend",
  "version": "1.0.0",
  "description": "ChocoOps Cloud - Chocolate Manufacturing Operations Backend",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "migrate:make": "knex migrate:make --knexfile knexfile.cjs -x ts",
    "migrate:latest": "knex migrate:latest --knexfile knexfile.cjs",
    "migrate:rollback": "knex migrate:rollback --knexfile knexfile.cjs",
    "migrate:status": "knex migrate:status --knexfile knexfile.cjs",
    "seed:make": "knex seed:make --knexfile knexfile.cjs -x ts",
    "seed:run": "knex seed:run --knexfile knexfile.cjs",
    "db:reset": "npm run migrate:rollback && npm run migrate:latest && npm run seed:run",
    "test:connection": "tsx src/config/database.ts"
  },
  "keywords": [
    "chocolate",
    "manufacturing",
    "operations",
    "inventory",
    "production"
  ],
  "author": "ChocoOps Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "pg": "^8.11.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.19.30",
    "@types/pg": "^8.10.9",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
